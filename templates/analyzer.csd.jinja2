<CsoundSynthesizer>
    <CsOptions>
        -i input/{{ filename }}
        --nosound
    </CsOptions>
    <CsInstruments>
        sr = 44100
        kr = {{ krate }}
        nchnls = 1
        0dbfs = 1

        pyinit

        instr 1

        pyruni {{ '{{' }}
import os, sys
from logger import Logger
my_logger = Logger(krate={{ krate }}, filename='{{ filename }}', features=['rms'])
        {{ '}}' }}

        ;kTime times

        aIn in

        kRms rms aIn
        pyassign "my_logger.buffer", kRms
        pyrun "my_logger.log('rms')"

        endin

        instr 2

        pyruni "my_logger.write()"

        endin
    </CsInstruments>
    <CsScore>
        i1 0 5
        i2 5 0
        e
    </CsScore>
</CsoundSynthesizer>
